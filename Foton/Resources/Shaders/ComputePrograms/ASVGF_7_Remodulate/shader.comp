    vec3 environment = vec3(0);
    vec3 emission = vec3(0);
    
    if (entity_id == -1) {
        environment.rgb = get_environment_color(direction) * push.consts.environment_intensity;
    }

    if (entity_id != -1) {
        // Position G Buffer 
        temp = imageLoad(gbuffers[POSITION_DEPTH_ADDR], ipos);
        vec3 w_p = temp.xyz;
        float depth = temp.w;

        // UV G Buffer
        temp = imageLoad(gbuffers[UV_METALLIC_ROUGHESS_ADDR], ipos);
